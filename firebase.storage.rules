rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Store notes under users/{uid}/notes/
    match /users/{userId}/notes/{filePath=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId
        // enforce server-side size limit (25MB)
        && request.resource.size < 25 * 1024 * 1024
        // very simple contentType whitelist
        && (request.resource.contentType.matches('application/.*') || request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf');
    }
  }
}